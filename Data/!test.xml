  </game>

  <game name="33SteamUserTest">
    <title>33 - Steam User Test</title>
    <location_path environment_variable="steamuserdata" path="7"/>
    <save />
  </game>

  <game name="34SteamUserTest">
    <title>33 - Steam User Test</title>
    <location_path environment_variable="steamuser" path="team fortress 2"/>
    <save path="config" /> 
  </game>

</games>