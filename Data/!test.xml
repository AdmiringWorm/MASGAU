  </game>

  <game name="24SteamCommonTest">
    <title>24 - Steam Common Test</title>
    <location_path environment_variable="steamcommon" path=""/>
    <save path="*" filename="*.ini"/>
  </game>
  
  <game name="25SteamSourceModsTest">
    <title>25 - Steam Source Mods Test</title>
    <location_path environment_variable="steamsourcemods" path=""/>
