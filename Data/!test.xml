  </game>

  <game name="27IgnoreFileNameOnlyNoWildcardTest">
    <title>27 - Ignore File Name Only No Wildcard Test</title>
    <location_path environment_variable="allusersprofile" path="Start Menu\Programs\Accessories" windows_version="XP" />
